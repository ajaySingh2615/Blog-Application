<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/header') %>
    <title>Home Page</title>
    <style>
      /* Body Styling */
      body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
      }

      /* Navbar Styling */
      nav {
        background-color: #1f1f1f;
        padding: 15px;
      }

      nav a {
        color: #e0e0e0;
        text-decoration: none;
        margin: 0 15px;
        font-size: 1.1rem;
        transition: color 0.3s;
      }

      nav a:hover {
        color: #1e90ff;
      }

      /* Card Layout */
      .container {
        margin-top: 50px;
      }

      .row {
        display: flex;
        gap: 30px;
        justify-content: center;
        flex-wrap: wrap;
      }

      .col {
        flex: 1 1 calc(25% - 30px);
        max-width: calc(25% - 30px);
        min-width: 280px;
        transition: transform 0.3s;
      }

      .col:hover {
        transform: scale(1.05);
      }

      /* Card Styling */
      .card {
        background-color: #1f1f1f;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
        transition: box-shadow 0.3s;
      }

      .card:hover {
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.4);
      }

      .card-img-top {
        height: 200px;
        object-fit: cover;
        border-bottom: 2px solid #1e90ff;
      }

      .card-body {
        padding: 15px;
        text-align: center;
      }

      .card-title {
        font-size: 1.3rem;
        color: #ffffff;
        margin-bottom: 10px;
      }

      /* Button Styling */
      .btn {
        background-color: #1e90ff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s;
      }

      .btn:hover {
        background-color: #007acc;
      }

      /* Responsive Design */
      @media (max-width: 992px) {
        .col {
          flex: 1 1 calc(50% - 30px);
        }
      }

      @media (max-width: 576px) {
        .col {
          flex: 1 1 100%;
        }
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container">
      <div class="row">
        <% blogs.forEach(blog => { %>
          <div class="col">
            <div class="card">
              <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %>">
              <div class="card-body">
                <h5 class="card-title"><%= blog.title %></h5>
                <a href="/blog/<%= blog._id %>" class="btn">View</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
