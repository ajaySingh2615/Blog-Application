<!doctype html>
<html lang="en">
  <head>
    <%- include('./partials/header') %>
    <title>Blog Page</title>
    <style>
      /* Body and General Styling */
      body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
      }

      /* Blog Title */
      h1 {
        color: #ffffff;
        font-size: 2.5rem;
        font-weight: 600;
        text-align: center;
        margin-bottom: 20px;
      }

      /* Blog Content Section */
      .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
      }

      /* Blog Image */
      img {
        display: block;
        margin: 20px auto;
        border-radius: 10px;
        width: 100%;
        max-width: 700px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
      }

      /* Blog Body */
      pre {
        white-space: pre-wrap;
        background-color: #1f1f1f;
        color: #e0e0e0;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 40px;
      }

      /* Author Section */
      .author {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-top: 20px;
        background-color: #1f1f1f;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
      }

      .author img {
        border-radius: 50%;
        width: 60px;
        height: 60px;
      }

      .author-name {
        font-size: 1.2rem;
        font-weight: 500;
        color: #ffffff;
      }

      /* Comments Section */
      .comments {
        margin-top: 50px;
      }

      .comments h1 {
        color: #ffffff;
        font-size: 1.8rem;
        margin-bottom: 20px;
        text-align: left;
      }

      .comment-box {
        background-color: #1f1f1f;
        padding: 10px;
        border-radius: 8px;
        margin-bottom: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
      }

      .comment-box img {
        border-radius: 50%;
        width: 40px;
        height: 40px;
      }

      .comment-content {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 10px;
        color: #ffffff;
      }

      /* Comment Input */
      input[type="text"] {
        background-color: #1f1f1f;
        color: #e0e0e0;
        border: 1px solid #3a3a3a;
        border-radius: 8px;
        padding: 10px;
        width: 100%;
        margin-bottom: 10px;
      }

      .btn-primary {
        background-color: #1e90ff;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s;
      }

      .btn-primary:hover {
        background-color: #007acc;
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        .container {
          padding: 10px;
        }

        img {
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container">
      <h1><%= blog.title %></h1>
      <img src="<%= blog.coverImageURL %>" alt="<%= blog.title %>">
      <pre><%= blog.body %></pre>
    </div>

    <div class="container author">
      <img src="<%= blog.createdBy.profileImageURL %>" alt="<%= blog.createdBy.fullName %>">
      <span class="author-name"><%= blog.createdBy.fullName %></span>
    </div>

    <div class="container comments">
      <h1>Comments (<%= comments.length %>)</h1>
      <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
          <input type="text" name="content" placeholder="Enter your comment">
          <button class="btn btn-primary" type="submit">Add</button>
        </form>
      <% } %>

      <% comments.forEach(comment => { %>
        <div class="comment-box">
          <div class="comment-content">
            <img src="<%= comment.createdBy.profileImageURL %>" alt="comment">
            <span><%= comment.createdBy.fullName %></span>
          </div>
          <pre><%= comment.content %></pre>
        </div>
      <% }) %>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
